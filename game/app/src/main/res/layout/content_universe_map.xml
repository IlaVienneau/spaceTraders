<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/marketplaceTextView"
        android:layout_width="201dp"
        android:layout_height="31dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="5dp"
        android:text="Trade at the Marketplace"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tradeButton"
        app:layout_constraintEnd_toStartOf="@+id/tradeButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tradeButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Trade"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/travelButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Travel"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/TravelTextView"
        app:layout_constraintTop_toBottomOf="@+id/tradeButton" />

    <TextView
        android:id="@+id/TravelTextView"
        android:layout_width="201dp"
        android:layout_height="31dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:text="Travel to nearby Planets"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/travelButton"
        app:layout_constraintEnd_toStartOf="@+id/travelButton"
        app:layout_constraintStart_toStartOf="@+id/marketplaceTextView" />

</android.support.constraint.ConstraintLayout>